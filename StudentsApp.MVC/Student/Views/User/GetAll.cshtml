@using Students.BLL.ModelVM.USER
@model (List<GetAllUser>, string?, bool)

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card w-75 shadow">
        <div class="card-body">

            @if (Model.Item3 == true)
            {
                <div class="alert alert-danger text-center">
                    @Model.Item2
                </div>
            }
            else
            {
                <div class="card-header bg-success text-white text-center fw-bold mb-3 p-2">
                    Users List
                </div>

                <table class="table table-hover table-bordered border-dark text-center align-middle">
                    <thead class="table-success">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Age</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Item1)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.age</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

        </div>
    </div>
</div>
