@model Students.BLL.ModelVM.Class.GetAllClass

@{
    ViewBag.Title = "Create Class";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg rounded-4 w-50">
        <div class="card-header bg-success text-white text-center fw-bold p-3">
            Create New Class
        </div>

        <div class="card-body">
            <form asp-action="SaveClass" method="post">
                <div class="mb-3">
                    <label asp-for="name" class="form-label fw-bold">Class Name</label>
                    <input type="text" class="form-control" asp-for="name" value="@Model?.name" required />
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-5">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
