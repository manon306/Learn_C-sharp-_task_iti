@using Sempa.BLL.VM.ClassVm
@model ClassDashboardVM

@{
    ViewBag.Title = "Classes Dashboard";
}

<div class="container py-4">
    <h1 class="mb-4">Classes Dashboard</h1>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card p-3 text-center">
                <div class="h6">Classes</div>
                <div class="fs-3 fw-bold">@((Model?.Classes?.Count() ?? 0))</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3 text-center">
                <div class="h6">Students</div>
                <div class="fs-3 fw-bold">@((Model?.Students?.Count() ?? 0))</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3 text-center">
                <div class="h6">Teachers</div>
                <div class="fs-3 fw-bold">@((Model?.Teachers?.Count() ?? 0))</div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Classes Column -->
        <div class="col-lg-5">
            <h3>Classes</h3>

            @if (Model?.Classes?.Any() ?? false)
            {
                <div class="row row-cols-1 g-3">
                    @foreach (var cls in Model.Classes)
                    {
                        <div class="col">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">@cls.Name</h5>
                                    <p class="card-text mb-1">
                                        <small>Students Count: @((cls.Students?.Count() ?? 0))</small>
                                    </p>
                                    <!-- If you have Id in GetVm you can add details link here -->
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">No classes found.</div>
            }
        </div>

        <!-- Students & Teachers Column -->
        <div class="col-lg-7">
            <h3>Students</h3>
            <div class="table-responsive mb-4">
                <table class="table table-striped table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th style="width:40px">#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Class</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Students?.Any() ?? false)
                        {
                            var idx = 1;
                            foreach (var s in Model.Students)
                            {
                                <tr>
                                    <td>@idx</td>
                                    <td>@s.FirstName @s.LastName</td>
                                    <td>@s.Email</td>
                                    <td>@(s.c?.Name ?? "-")</td> @* property 'c' based on your code *@
                                </tr>
                                idx++;
                            }
                        }
                        else
                        {
                            <tr><td colspan="4" class="text-center">No students found.</td></tr>
                        }
                    </tbody>
                </table>
            </div>

            <h3>Teachers</h3>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th style="width:40px">#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Class</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Teachers?.Any() ?? false)
                        {
                            var idx2 = 1;
                            foreach (var t in Model.Teachers)
                            {
                                <tr>
                                    <td>@idx2</td>
                                    <td>@t.FirstName @t.LastName</td>
                                    <td>@t.Email</td>
                                    <td>@(t.c?.Name ?? "-")</td>
                                </tr>
                                idx2++;
                            }
                        }
                        else
                        {
                            <tr><td colspan="4" class="text-center">No teachers found.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
