@model List<Sempa.BLL.VM.UserVm.GetAllVm>

@{
    ViewBag.Title = "All Teachers";
}

<div class="container py-5">
    <h2 class="text-center mb-4">All Users</h2>

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <div class="col-md-4">
                    <div class="card shadow-lg rounded-4 h-100">
                        <div class="card-body text-center">
                            <!-- صورة افتراضية -->
                            <img src="~/Files/@user.imagePath"
                                 class="rounded-circle mb-3"
                                 style="width:100px;height:100px;object-fit:cover;"
                                 alt="User Profile" />


                            <h5 class="card-title fw-bold">
                                @user.FirstName @user.LastName
                            </h5>
                            <p class="card-text text-muted mb-1">
                                <i class="bi bi-envelope"></i> @user.Email
                            </p>
                            <p class="card-text">
                                <small class="text-secondary">
                                    Joined: @user.CreatedAt.ToString("dd MMM yyyy")
                                </small>
                            </p>

                            <a href="#" class="btn btn-primary btn-sm">View Profile</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info text-center">
                No Teacher found.
            </div>
        }
    </div>
</div>
