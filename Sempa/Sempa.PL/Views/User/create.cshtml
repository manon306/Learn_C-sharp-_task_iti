@model Sempa.BLL.VM.UserVm.CreateUserVm

@{
    Layout = "_Layout";
    ViewBag.Title = "Create";

}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg rounded-4 w-50">
        <div class="card-header bg-primary text-white text-center fw-bold p-3">
            @SharedLocalizer["AddnewStudent"]
        </div>

        <div class="card-body">
            <form asp-action="create" asp-controller="User" method="post" class="px-4" enctype="multipart/form-data">

                <!-- First Name -->
                <div class="mb-3 text-start">
                    <label asp-for="FirstName" class="form-label fw-bold">@SharedLocalizer["FirstName"]</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <!-- Last Name -->
                <div class="mb-3 text-start">
                    <label asp-for="LastName" class="form-label fw-bold">@SharedLocalizer["LastName"]</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="mb-3 text-start">
                    <label asp-for="Email" class="form-label fw-bold">@SharedLocalizer["Email"]</label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="mb-3 text-start">
                    <label asp-for="Password" class="form-label fw-bold">@SharedLocalizer["Password"]</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <!-- User Type -->
                <div class="mb-3 text-start">
                    <label asp-for="UserType" class="form-label fw-bold">@SharedLocalizer["UserType"]</label>
                    <select asp-for="UserType" class="form-select">
                        <option value="">-- Select User Type --</option>
                        <option value="Student">@SharedLocalizer["Student"]</option>
                        <option value="Teacher">@SharedLocalizer["Teacher"]</option>
                    </select>
                    <span asp-validation-for="UserType" class="text-danger"></span>
                </div>
                <div class="mb-3 text-start">
                    <label asp-for="ClassId" class="form-label fw-bold">@SharedLocalizer["Class"]</label>
                    <select asp-for="ClassId" class="form-select">
                        <option value="">-- Select Class --</option>
                        @foreach (var cls in (IEnumerable<Sempa.BLL.VM.ClassVm.GetClassVm>)ViewBag.Classes)
                        {
                            <option value="@cls.ID">@cls.Name</option>
                        }
                    </select>
                    <span asp-validation-for="ClassId" class="text-danger"></span>
                </div>


                <div class="mb-3 text-start">
                    <label asp-for="Profile" class="form-label fw-bold">@SharedLocalizer["Profile"]</label>
                    <input asp-for="Profile" type="file" class="form-control" />
                    <span asp-validation-for="Profile" class="text-danger"></span>
                </div>

                <!-- Message -->
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger text-center">
                        @ViewBag.Message
                    </div>
                }

                <!-- Submit -->
                <div class="text-center">
                    <button type="submit" class="btn btn-success px-5">@SharedLocalizer["Submit"]</button>
                </div>

            </form>
        </div>
    </div>
</div>
